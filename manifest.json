{
    "manifest_version": 3,
    "name": "WebAI",
    "version": "1.1",
    "description": "Summarizes the current webpage and read it.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus",
        "clipboardWrite",
        // Add "file://*/*" if you need to access local PDF files via file:// URLs
        // "file://*/*"
    ],
    // "host_permissions": [
    //     "<all_urls>" // Needed to fetch PDFs from any origin and for scripting
    // ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; worker-src 'self'; object-src 'self'"
        // If pdf.worker.js causes issues, you might need to allow blob URLs for the worker:
        // "extension_pages": "script-src 'self' blob:; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [ "pdf.worker.js" ], // Make worker accessible
            "matches": [ "<all_urls>" ] // Or restrict to your extension's origin if possible
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}